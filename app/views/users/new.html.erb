<div class="columns is-mobile" style="max-width: 500px;">
  <div class="column">
    <h1 class="title is-1">Sign up</h1>
    <%= form_for @user do |f| %>
      <div class="field">
        <%= f.label :name, class:"label" %>
        <%= f.text_field :name, class:"input" %>
      </div>
      <div class="field">
        <%= f.label :email, class:"label" %>
        <%= f.email_field :email, class:"input" %>
      </div> 
      <div class="field">
        <%= f.label :password, class:"label" %>
        <%= f.password_field :password, class:"input" %>
      </div>  
      <div> 
        <%= f.submit, class:"button is-primary is-outlined" %>
      </div>  
      <% end %>  
  </div>
</div>      