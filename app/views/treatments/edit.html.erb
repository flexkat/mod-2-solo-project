<div class="columns is-mobile" style="max-width: 500px;">
  <div class="column">
    <h1 class="title is-1">Edit Treatment</h1>
    <%= form_for @treatment do |f| %>
      <div class="field">
        <%= f.label :name, class:"label" %>
        <%= f.text_field :name, class:"input" %>
      </div>  
      <div class="field">
        <%= f.label :description, class:"label" %>
        <%= f.text_field :description, class:"input" %>
      </div>
      <div class="field">
        <%= f.label :price, class:"label" %>
        <%= f.number_field :price, class:"input" %>
      </div>
      <div class="field">
        <%= f.label :time, class:"label" %>
        <%= f.number_field :time, class:"input" %>
      </div>
      <br>
      <%= f.submit "Update Treatment", class:"button is-primary is-outlined" %>    
    <% end %>
  </div>
</div>  
