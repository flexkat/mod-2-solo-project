<h1 class="title is-1"><%= @salon.name %></h1>
<h3 class="title is-6"><%= @salon.opening_hours %></h3>
<p><%= @salon.address %></p>
<p><%= @salon.location.name %></p><br>
<div>
  <h3 class="title is-5"> Stylists </h3>
  <% @salon.stylists.each do |stylist| %>
    <li><%= link_to stylist.name, stylist %></li>
  <% end %>
</div>
<br>
<h3 class="title is-5"> Treatments </h3>
<div>
  sort by:
  <% @sort_options.each do |option| %>
    <%= link_to option, salon_path(sort_by: option) %>
  <% end %>
  <br>
  <br>
  <% @treatments.uniq.each do |treatment| %>
    <li><%= link_to "#{treatment.name} - Â£#{treatment.price}", treatment %></li>
  <% end %>
</div>  

<br>
