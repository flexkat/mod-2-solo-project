<h1>Edit Stylist</h1>
<%= form_for @stylist do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :job_title %>
<%= f.text_field :job_title %>
<%= f.label :salon %>
<%= f.collection_select :salon_id, Salon.all, :id, :name %>
<%= f.collection_check_boxes :treatment_ids, Treatment.all, :id, :name %><br>
<%= f.fields_for :treatments, @stylist.treatments.build do |treatments_fields| %>
  <%= treatments_fields.text_field :name %>
  <%= treatments_fields.text_field :description %>
  <%= treatments_fields.number_field :price %>
  <%= treatments_fields.number_field :time %>
<% end %>
<%= f.submit %>
<% end %>

<%= link_to "Delete", stylist_path(@stylist), :data => {:confirm => "Are you sure?", :method => "delete"} %>