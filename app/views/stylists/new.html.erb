<div class="container">
  <h1 class="title is-1" >New Stylist</h1>
  <%= form_for @stylist do |f| %>
  <div class="control">
    <%= f.label :name %>
    <div class="field">
      <div class="control">
        <%= f.text_field :name, class:"input is-primary" %>
      </div>
    <%= f.label :job_title %>
    <%= f.text_field :job_title, class:"input is-primary" %>
    <%= f.label :salon %>
    <div class="select">
      <%= f.collection_select :salon_id, Salon.all, :id, :name %>
    </div>
    <%= f.collection_check_boxes :treatment_ids, Treatment.all, :id, :name %><br>



    <%= f.submit %>
    <% end %>
  </div>
</div>