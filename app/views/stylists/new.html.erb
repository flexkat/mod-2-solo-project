<div class="columns is-mobile" style="max-width: 500px;">
  <div class="column">
    <h1 class="title is-1" >New Stylist</h1>
    <%= form_for @stylist do |f| %>
      <div class="field">
        <%= f.label :name, class:"label"%>
        <%= f.text_field :name, class:"input" %>
      </div>  
      <div class="field">
        <%= f.label :role_id, class:"label" %>
        <div class="select">
          <%= f.collection_select :role_id, Role.all, :id, :title %>
        </div>      
      </div>  
      <div class="field">
        <%= f.label :salon, class:"label" %>
        <div class="select">
          <%= f.collection_select :salon_id, Salon.all, :id, :name %>
        </div>
      </div>
      <div>
        <%= f.label "Treatments", class:"label" %>
        <%= f.collection_check_boxes :treatment_ids, Treatment.all, :id, :name do |b| %>
          <%= b.check_box %>
          <%= b.label class:"checkbox" %><br>
        <% end %><br>
      </div>  

      <div class="field">
        <%= f.label "Or add a new treatment", class:"label" %>
        <%= f.fields_for :treatments, @stylist.treatments.build do |treatments_fields| %>
          <div class="field">
            <%= f.label :service, class:"label" %>
            <div class="select">
              <%= treatments_fields.collection_select :service_id, Service.all, :id, :name %>
            </div>
          </div>  
          <div class="field">
            <%= f.label :name, class:"label" %>
            <%= treatments_fields.text_field :name, class:"input" %>
          </div>  
          <div class="field">
            <%= f.label :description, class:"label" %>
            <%= treatments_fields.text_field :description, class:"input" %>
          </div>
          <div class="field">
            <%= f.label :price, class:"label" %>
            <%= treatments_fields.number_field :price, class:"input" %>
          </div>
          <div class="field">
            <%= f.label :time, class:"label" %>
            <%= treatments_fields.number_field :time, class:"input" %>
          </div>
        <% end %>
      </div>
      
      <%= f.submit "Create Stylist", class:"button is-primary is-outlined" %>
    <% end %>
  </div>
</div>  
